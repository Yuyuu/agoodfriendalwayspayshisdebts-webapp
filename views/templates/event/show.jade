main
  .jumbotron.inverse
    .container
      h1 {{model.event.name}}
      p.lead= t("app.event.with")
        | &nbsp;{{model.stringifyParticipantsNames()}}
.container.purchase-board
  .col-sm-4.col-sm-offset-1.col-xs-12
    .creation-panel(bs-affix="" data-offset-top="-20")
      include includes/create_purchase_form
  .col-sm-6.col-xs-12
    .panel.panel-default(ng-cloak="" ng-repeat="purchase in model.event.purchases | orderBy:$index:true")
      .panel-heading
        h4
          span.text-bold {{purchase.amount | currency:'â‚¬':2}}
          | &nbsp;- {{purchase.title}}
      .panel-body
        p= t("app.event.purchased_by")
          | &nbsp;
          span.text-bold {{purchase.purchaser}}
        p= t("app.event.shared_between")
          | &nbsp;
          span.text-bold {{purchase.participants.join(", ")}}
      .panel-footer(ng-if="purchase.description") {{purchase.description}}
