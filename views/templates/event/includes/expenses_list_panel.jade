.expenses-list-panel(ng-controller="ExpensesListController as model")
  .panel.panel-primary(ng-cloak="" ng-repeat="expense in model.expenses | orderBy:$index:true")
    .panel-heading
      h4
        span.text-bold {{::expense.amount | currency:'â‚¬':2}}
        | &nbsp;- {{::expense.label}}
    .panel-body
      p #{t("app.event.purchased_by")}&nbsp;
        span.text-bold {{::expense.purchaserName}}
      p #{t("app.event.shared_between")}&nbsp;
        span.text-bold(debts-inline-data="::expense.participantsNames")
    .panel-footer(ng-if="::expense.description") {{::expense.description}}
  .row.text-center
    button.btn.btn-default(ng-click="model.loadMore()" ng-disabled="model.allLoaded")
      span.glyphicon.glyphicon-triangle-bottom(aria-hidden="true")
      |  #{t("app.event.load_more")}