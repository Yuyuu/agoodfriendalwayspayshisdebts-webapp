section.history.margin-btm-1(ng-controller="HistoryController as history")
  .debts-panel
    .debts-panel-heading-sm.inverse
      h4= t("app.history.title")
        span.glyphicon.glyphicon-hourglass.pull-right(aria-hidden="true")
    .debts-panel-body
      .form-group.form-group-sm
        select.form-control(ng-model="history.filter" ng-change="history.change()"
            ng-options="filter.name as filter.translation | i18next for filter in history.filters")
      .history-group
        .history-summary(ng-repeat="summary in history.summaries track by summary.id")
          time(ng-bind="::summary.creationDate | debtsTime")
          .history-summary-data
            span.glyphicon(aria-hidden="true" debts-history-icon="")
            span  {{::summary.data}}
      .history-more
        button.btn.btn-load-more.btn-xs.btn-block(type="button" ng-click="history.loadMore()"
            ng-disabled="history.allLoaded || history.loading")
          span.glyphicon.glyphicon-triangle-bottom(aria-hidden="true")
          |  #{t("app.history.older")}