main
  .jumbotron.inverse
    .container
      h1 {{model.event.name}}
.container.result-board
  .row
    .col-lg-8.col-lg-offset-2.btn-header
      a.btn.btn-default(type="button" ng-href="#/events/{{model.event.id}}" title=t("app.debts.back"))
        span.glyphicon.glyphicon-arrow-left(aria-hidden="true")
        | &nbsp;#{t("app.debts.back")}
  .row.participant-result(ng-repeat="(participantId, participantResults) in model.results")
    .result-box.col-lg-8.col-lg-offset-2.col-xs-12
      .col-lg-6.col-sm-6.col-xs-12
        h2 {{model.findParticipantName(participantId)}}
        p= t("app.debts.total_spent")
          span.text-bold  {{participantResults.totalSpent | currency:'€':2}}</span>
      .col-lg-6.col-sm-6.col-xs-12
        .table-responsive
          table.table.table-striped
            thead
              tr
                th= t("app.debts.creditor")
                th= t("app.debts.debt")
            tbody
              tr(ng-repeat="(creditorId, debtAmount) in participantResults.debtsDetail"
                  ng-class="[debtAmount > 0 ? 'danger' : 'success']")
                th(scope="row") {{model.findParticipantName(creditorId)}}
                td {{debtAmount | currency:'€':2}}
              tr.total-row
                th(scope="row")= t("app.debts.total")
                td.text-bold {{participantResults.totalDebt | currency:'€':2}}